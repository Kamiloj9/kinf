#include <iostream>
#include <string>
using namespace std;

int main()
{
    int a;
    cout << "Wpisz liczbe nieparzysta:" << endl;
    cin >> a;
    if(a%2==1)
    {
        for(int i=0; i<(a-1)/2; i++)
        {
            cout << "#";
            for(int j=0; j<a-2; j++)
            {
                cout << " ";
            }
            cout << "#" << endl;
        }
        for(int i=0; i<a; i++)
        {
            cout << "#";
        }
        cout << endl;
        for(int i=0; i<(a-1)/2; i++)
        {
            cout << "#";
            for(int j=0; j<a-2; j++)
            {
                cout << " ";
            }
            cout << "#" << endl;
        }
    }
    else
    {
        while(1)
        {
                cout << "0123456789" << endl;
        }
    }
}
